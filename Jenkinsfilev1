pipeline {
    agent any
	tools {
        maven 'localmaven'
    }
    stages{
		stage('Clean') {
			 steps {
				bat 'mvn clean'
            }
		}
		stage('Test') {
			 steps {
				bat 'mvn test'
            }
			post {
                success {
                    echo 'Test Success.'
                }

                failure {
                    echo ' Test failed.'
                }
            }
		}
        stage('Build'){
            steps {
				bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage ('Deploy to Staging'){
            echo 'Deploying. to staging environment .'
        }
		stage ('Deploy to Production'){
            echo 'Deploying. to production environment . '
        }
    }
}